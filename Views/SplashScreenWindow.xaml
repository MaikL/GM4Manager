<Window x:Class="GM4ManagerWPF.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GM4ManagerWPF"
        mc:Ignorable="d"
        Title="GM4Manager" Height="500" Width="500" 
        WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/Ressources/GM4ManagerIcon.ico" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Ressources/GM4ManagerSplash.png"/>
    </Window.Background>
    <Grid>
        <TextBlock Text="{Binding GroupLoadingStatus}" 
           FontSize="14" 
           FontWeight="Bold" 
           Foreground="White"
           Margin="10"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"/>
    </Grid>
</Window>
