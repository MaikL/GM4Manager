<Window x:Class="GM4ManagerWPF.Views.AdUserSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:viewmodels="clr-namespace:GM4ManagerWPF.ViewModels" 
        xmlns:local="clr-namespace:GM4ManagerWPF.Localization"
        mc:Ignorable="d"
        Title="te" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="Res" ObjectType="{x:Type local:ResourceService}" MethodName="get_Instance" />
    </Window.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10 0 0 10" Grid.ColumnSpan="5">
            <Label Content="{Binding Source={StaticResource Res}, Path=[lblSearchterm]}" VerticalAlignment="Center" />
            <TextBox x:Name="SearchBox" Width="300" Margin="10 0" KeyDown="SearchBox_KeyDown"/>
            <Button Content="{Binding Source={StaticResource Res}, Path=[btnSearch]}" Width="100" Click="OnSearchClick"/>
            <CheckBox x:Name="cbAsAdmin" Content="{Binding Source={StaticResource Res}, Path=[cbAsAdmin]}"/>
        </StackPanel>

        <ListBox x:Name="ResultsList" Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1" Margin="10,10,10,18" 
                 Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                 ItemsSource="{Binding SearchResults}"/>
        <Button Content="{Binding Source={StaticResource Res}, Path=[btnSelect]}" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Column="4" Grid.Row="2"
                VerticalAlignment="Bottom" Width="125" Click="OnSelectClick"/>

    </Grid>
</Window>
