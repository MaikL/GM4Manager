<UserControl x:Class="GM4ManagerWPF.Manager"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:GM4ManagerWPF.Localization"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d"
            d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <local:ResourceService x:Key="Res" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <ListView x:Name="LvGroups" Grid.Row="0" Grid.ColumnSpan="2"
                 ItemsSource="{Binding LvGroupsCollection}"
                 SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                 >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{Binding Source={StaticResource Res}, Path=[colGroupName]}"  DisplayMemberBinding="{Binding Cn}"/>
                    <GridViewColumn Header="{Binding Source={StaticResource Res}, Path=[colDescription]}"  DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" Background="White">
            <Label Content="{Binding Source={StaticResource Res}, Path=[headerMembers]}" VerticalAlignment="Center" Foreground="Black" Background="White" />
            <ListView x:Name="LvMembers" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"
                  ItemsSource="{Binding GroupMembers}"                  
                  SelectedItem="{Binding SelectedMember, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <Button x:Name="BtnAddMember" Grid.Column="2" Content="{Binding Source={StaticResource Res}, Path=[btnAddMember]}" 
                HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="0,5,0,0"
                Command="{Binding AddMemberCommand}" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
        <Button x:Name="BtnRemoveMember" Grid.Column="3" Content="{Binding Source={StaticResource Res}, Path=[btnRemoveMember]}"
                HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Top" Margin="0,5,0,0"
                Command="{Binding RemoveMemberCommand}" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
    </Grid>
</UserControl>

    
